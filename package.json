{
  "name": "rate-my-idea",
  "private": true,
  "packageManager": "npm@10.8.1",
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "build:client": "turbo run build --filter=client",
    "build:api": "turbo run build --filter=api",
    "dev": "turbo run dev --parallel",
    "dev:api": "turbo run dev --filter=api",
    "prod:api": "cd apps/api && npm run prod",
    "dev:client": "turbo run dev --filter=client",
    "test": "vitest --run",
    "test:client": "cd apps/client && npm run test",
    "format:client": "prettier --write ./apps/client",
    "format:client:check": "prettier --check ./apps/client",
    "lint:client": "cd apps/client && npm run lint"
  },
  "workspaces": [
    "apps/*"
  ],
  "devDependencies": {
    "concurrently": "^8.2.2",
    "prettier": "^3.6.2",
    "tsx": "^4.20.3",
    "turbo": "^2.1.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@sentry/react": "^10.27.0",
    "@vercel/analytics": "^1.5.0",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "mongodb": "^7.0.0",
    "serverless-http": "^3.2.0",
    "zod": "^3.25.76"
  }
}
