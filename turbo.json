{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "api": {
      "outputs": ["dist/api/**"],
      "env": ["MONGODB_URI"]
    },
    "client": {
      "outputs": ["dist/client/**"]
    }
  }
}
